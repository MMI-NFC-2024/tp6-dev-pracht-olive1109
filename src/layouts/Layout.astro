<style>
    :root{
      --header-height: 64px;
      --bg:#f6fafc;
      --accent:#0a598d;
      --muted:#6b7280;
      --header-bg: linear-gradient(90deg,#ffffff, #f7fbff);
      --border: rgba(10,89,141,0.08);
    }

    html, body {
      margin: 0;
      width: 100%;
      height: 100%;
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: var(--bg);
      color: #0f1724;
    }

    /* Header */
    .site-header{
      position: sticky;
      top: 0;
      z-index: 40;
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
      border-bottom: 1px solid var(--border);
      background: var(--header-bg);
      height: var(--header-height);
      display: flex;
      align-items: center;
    }

    .container{
      width: 100%;
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 1rem;
      box-sizing: border-box;
    }

    .site-nav{
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      width: 100%;
    }

    .logo{
      font-weight: 700;
      color: var(--accent);
      text-decoration: none;
      font-size: 1.05rem;
    }

    .links{
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }

    .nav-link{
      padding: 0.45rem 0.6rem;
      color: var(--accent);
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: background .15s, transform .08s;
    }
    .nav-link:hover{
      background: rgba(10,89,141,0.06);
      transform: translateY(-1px);
    }

    /* Main content spacing to avoid being hidden under sticky header */
    .site-content{
      padding: calc(var(--header-height) + 1rem) 1rem 2rem;
      max-width: 1100px;
      margin: 0 auto;
      box-sizing: border-box;
    }

    /* Responsive */
    @media (max-width:700px){
      .links{ gap:0.4rem; }
      .nav-link{ padding:0.35rem 0.5rem; font-size:0.95rem; }
      .site-content{ padding-top: calc(var(--header-height) + 0.8rem); }
    }
  </style>